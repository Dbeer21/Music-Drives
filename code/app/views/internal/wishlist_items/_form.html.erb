<%= form_with(model: [:internal, @wishlist_item]) do |f| %>
  <div class="input-group">
    <%= f.label :instrument, 'Instrument:' %>
    <%= f.text_field :instrument, class: 'textbox textbox--wide' %>
  </div>

  <div class="input-group">
    <%= f.label :quantity, 'Quantity:' %>
    <%= f.select :quantity, (0..999) %>
  </div>

  <div class="input-group">
    <%= f.label :date_required, 'Date Needed By:' %>
    <%= f.date_field :date_required, class: 'textbox textbox--wide' %>
  </div>

  <div class="input-group">
    <%= f.label :importance, 'Importance:' %>
    <%= f.select :importance, [['High', 'High'], ['Medium', 'Medium'], ['Low', 'Low']], class: 'textbox textbox--select' %>
  </div>

  <div class="hbox">
    <%= link_to 'Cancel', internal_wishlist_items_path, class: 'button button--spaced' %>
    <%= f.submit 'Save', class: 'button button--spaced' %>
  </div>
<% end %>
