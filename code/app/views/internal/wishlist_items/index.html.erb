<% content_for(:title, 'Wishlist Items') %>

<h1>WISHLIST</h1>

<style>
table, th, td {
  border: 1px solid brown;
  border-collapse: collapse;
}

th, td {
  text-align: center;
}

table {
  margin:1em auto;
  width: 100%;
}
</style>

<table class="push-down">
  <tr>
    <th>Instrument</th>
    <th>Quantity</th>
    <th>Date Required</th>
    <th>Importance</th>
    <th>Actions</th>
  </tr>

  <% @wishlist_items.each do |wishlist_item| %>
    <tr>
      <td><%= wishlist_item.instrument %></td>
      <td><%= wishlist_item.quantity %></td>
      <td><%= wishlist_item.date_required %></td>
      <td><%= wishlist_item.importance %></td>
      <td>
        <%= link_to 'Edit', edit_internal_wishlist_item_path(wishlist_item), class: 'link link--underlined' %>, or
        <%= link_to 'Delete', internal_wishlist_item_path(wishlist_item), class: 'link link--underlined', method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<div style="padding-top: 10px; text-align:center" class="hbox hbox--centering push-down">
  <%= link_to 'Add to Wishlist', new_internal_wishlist_item_path, class: 'button button--spaced' %>
</div>
